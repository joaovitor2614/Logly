{
  "compilerOptions": {
    /* Linting */
    "strict": true,
    "lib": [ "es2016", "dom"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "sourceMap": true,
    "types": ["cypress", "node"],
    "baseUrl": ".", // base path for relative paths
    "paths": {
      "@/*": ["src/*"] // maps @ to your src directory
    }
  },
  "include": ["cypress/**/*.ts", "cypress/**/*.d.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"]
}