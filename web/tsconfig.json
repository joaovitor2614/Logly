{
  "compilerOptions": {
    /* Linting */
    "strict": true,
    "lib": [ "es2016", "dom"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".", // base path for relative paths
    "paths": {
      "@/*": ["src/*"] // maps @ to your src directory
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"]
}